# DO NOT CHANGE THIS FILE!!!!! --> CHANGE YOUR ALIASES IN .zshrc
# ==============================================================

# CODE
alias tes="cd ~/code/test && lisa"
alias code="cd ~/code && lisa"
# GIT
alias gitc="gitconfig"
alias gitconfig="vim ~/.gitconfig"
alias giti="gitignore"
alias gitignore="vim ~/.gitignore"
# DOTFILES
alias dotfiles.goto="vim ~/.dotfiles/README.md -c ':NERDTreeFind'"
alias dotf.goto="dotfiles"
alias dotf.tes.goto="dotfiles && cd _test && ls -lisa"
alias dotf="dotfiles"
alias dotfiles="cd ~/.dotfiles && ls -lisa"
alias dotfiles.git-push="cd ~/.dotfiles && git up && cd -"
alias dotfiles.git-pull="cd ~/.dotfiles && git pull origin master && zsh && cd -"
alias dotfiles.update="cd ~/.dotfiles && git pull origin master && zsh && cd -"
alias dotf.update="dotfiles.update"
# Downloads
alias dow="cd ~/Downloads && ls -lisa"
# Dropbox
alias dropbox.goto="cd ~/Dropbox && ls -lisa"
alias dropbox.client="/opt/dropbox/dropboxd"
alias dropbox.deamon="sudo service dropbox start "
# MAKERSPACE
alias makerspace.goto="cd ~/code/makerspace-eberswalde && ls -lisa"
alias makerspace.github="firefox https://github.com/makerspace-eberswalde && exit"
alias makerspace.installer.github="firefox https://github.com/makerspace-eberswalde/installer && exit"
alias makerspace.knowledge.github="firefox https://github.com/makerspace-eberswalde/knowledge && exit"
alias makerspace.workshopraum.github="firefox https://github.com/makerspace-eberswalde/workshopraum && exit"
alias makerspace.dotfiles.github="firefox https://github.com/makerspace-eberswalde/dotfiles && exit"
alias ms.goto="makerspace.goto"
alias knowledge.goto="cd ~/code/makerspace-eberswalde/knowledge && ls"
# OPEN
alias o="gnome-open . 2>/dev/null && exit"
# SHUTDOWN
alias sd="sudo shutdown now"
# TFTP
alias tftp.goto="cd /var/lib/tftpboot && ls -lisa"
alias tftp.distros="cd /var/lib/tftpboot/distros && ls -lisa"
alias tftp.dnsmasq.conf="sudo vim /etc/dnsmasq.conf"
alias tftp.todo="sudo vim /var/lib/tftpboot/TODO.md"
alias tftp.services.restart="sh /var/lib/tftpboot/install/script-services-restart.sh"
alias tftp.services.stop="sh /var/lib/tftpboot/install/script-services-stop.sh"
alias tftp.services.rm="sh /var/lib/tftpboot/install/script-services-remove.sh"
alias tftp.configure="sh /var/lib/tftpboot/install/configure.sh"
alias tftp.syslinux="cd /usr/lib/syslinux && ls -lisa"
alias tftp.start.preseed-http-server="cd /var/lib/tftpboot/http && http-server"
alias tftp.vim='cd /var/lib/tftpboot && sudo vim TODO.md'
alias tftp.update='cd /var/lib/tftpboot && sudo git pull'
# TMUX
alias mux="tmuxinator start"
alias tmuxc="tmuxconf"
alias tmux.conf="vim ~/.tmux.conf"
alias tk="tmux.kill"
alias tmux.kill="tmux kill-server"
alias tmux="TERM=screen-256color-bce tmux"
# VIM
alias vimrc="vim ~/.vimrc"
alias vrc="vimrc"
alias v="vim -c ':NERDTree'"
alias vb="cd ~/.vim/bundle && ls -lisa"
# ZSH
alias zshrc="vim ~/.zshrc"
alias zrc="zshrc"
alias zshrc.setup="vim ~/.zshrc_setup"
alias zrcs="zshrc.setup"
alias zshrc.functions="vim ~/.zshrc_functions"
alias zrcf="zshrc.functions"
alias zshrc.aliases="vim ~/.zshrc_functions"
alias zrca="zshrc.aliases"
# MISC
alias lisa="ls -lisa"
