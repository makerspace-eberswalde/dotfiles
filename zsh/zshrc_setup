# DO NOT CHANGE THIS FILE!!!!! --> CHANGE YOUR ALIASES IN .zshrc
alias zshrc="vim ~/.zshrc"
alias zrc="zshrc"
alias zshrc_setup="vim ~/.dotfiles/zsh/zshrc_setup"
alias zrcs="zshrc_setup"
alias gitc="gitconfig"
alias gitconfig="vim ~/.gitconfig"
alias giti="gitignore"
alias gitignore="vim ~/.gitignore"
alias vimrc="vim ~/.vimrc"
alias vrc="vimrc"
alias v="vim -c ':NERDTree'"
alias dotfiles.goto="vim ~/.dotfiles/README.md -c ':NERDTreeFind'"
alias dotf.goto="dotfiles"
alias dotf="dotfiles"
alias dotfiles="cd ~/.dotfiles && ls -lisa"
alias dotfiles.update="cd ~/.dotfiles && git pull origin master && zsh"
alias dotf.update="dotfiles.update"
alias tmuxc="tmuxconf"
alias tmux.conf="vim ~/.tmux.conf"
alias tk="tmux.kill"
alias tmux.kill="tmux kill-server"
alias tmux="TERM=screen-256color-bce tmux"
alias makerspace.goto="cd ~/code/makerspace-eberswalde && ls -lisa"
alias makerspace.github="firefox https://github.com/makerspace-eberswalde"
alias ms.goto="makerspace.goto"
alias tftp.tftpboot="cd /var/lib/tftpboot && ls -lisa"
alias tftp.distros="cd /var/lib/tftpboot/distros && ls -lisa"
alias tftp.dnsmasq="sudo vim /etc/dnsmasq.conf"
alias tftp.syslinux="cd /usr/lib/syslinux"
alias tftp.start.preseed-http-server="cd /var/lib/tftpboot/preseeds && http-server"
alias lisa="ls -lisa"
alias mux="tmuxinator start"
alias test="cd ~/code/test && lisa"
alias code="cd ~/code && lisa"

# EXPORT
export EDITOR='vim'

# SOURCE
# source ~/.bin/tmuxinator.zsh

# TMUX: attach to tmux if session is already existent
if [ -z $TMUX ];   then
   /usr/bin/tmux attach || /usr/bin/tmux new
fi

# If you come from bash you might have to change your $PATH.
# export PATH=$HOME/bin:/usr/local/bin:$PATH

# Path to your oh-my-zsh installation.
export ZSH=$HOME/.oh-my-zsh

# Set name of the theme to load. Optionally, if you set this to "random"
# it'll load a random theme each time that oh-my-zsh is loaded.
# See https://github.com/robbyrussell/oh-my-zsh/wiki/Themes
ZSH_THEME="bureau"

# Uncomment the following line to use case-sensitive completion.
